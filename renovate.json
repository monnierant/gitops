{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "enabledManagers": [
    "dockerfile",
    "kubernetes",
    "helm-values",
    "helmfile",
    "argocd"
  ],
  "argocd": {
    "managerFilePatterns": ["/\\.ya?ml$/"]
  },
  "kubernetes": {
    "enabled": true,
    "fileMatch": ["/\\.ya?ml$/"]
  }
}
